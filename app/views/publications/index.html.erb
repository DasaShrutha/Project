<div class="home">
</div>

<div class="courses">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="welcome_title">Publications</div>
			</div>
		</div>

		<div class="row courses_row">
			<% @publications.each do |publication| %>
				<div class="col-lg-4 course_col">
					<div class="course">
						<div class="course_image">
							<%= image_tag url_for(publication.preview(resize: '690x347')), width: '100%', height: '100%' %>
						</div>
						<div class="course_body">
							<div class="course_title"><a href="#"><%= publication.title %></a></div>
							<div class="course_text">
								<p><%= publication.description %></p>
							</div>
						</div>
						<div class="course_footer d-flex flex-row align-items-center justify-content-start">
							<div class="course_mark course_free trans_200">
								<%= link_to rails_blob_path(publication.attachment, disposition: 'attachment') do %>
									<i class="fa fa-download"></i>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
