<%= simple_form_for @contact, html: {id: 'contact_form', class: 'contact_form'} do |f| %>
	<div class="row contact_row">
		<div class="col-lg-6 contact_col">
			<%= f.input :name, required: true, label: false, wrapper: false,
			            placeholder: 'Name', input_html: {class: 'form_input'} %>
		</div>
		<div class="col-lg-6 contact_col">
			<%= f.input :email, as: :email, required: true, label: false, wrapper: false,
			            placeholder: 'Email', input_html: {class: 'form_input'} %>
		</div>
		<div class="col-lg-12">
			<%= f.input :message, required: true, label: false, wrapper: false,
			            placeholder: 'Message', input_html: {class: 'form_input form_text'} %>
		</div>

		<div class="col">
			<%= f.button :submit, 'Send Message', class: 'form_button trans_200' %>
		</div>
	</div>
<% end %>
