<div class="home">
	<div class="breadcrumbs_container">
		<div class="container">
			<div class="row">
				<div class="col">
					<ul class="breadcrumbs_list d-flex flex-row align-items-center justify-content-start">
						<li><%= link_to 'media', media_path %></li>
						<li><%= @medium.title %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="video pt-3">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="welcome_title"><%= @medium.title %></div>
			</div>
		</div>

		<div class="row mt-4">
			<div class="col-lg-8 offset-lg-2">
				<div class="video_content">
					<div class="video_container_outer">
						<div class="video_overlay d-flex flex-column align-items-start justify-content-center">
							<div></div>
						</div>
						<div class="video_container">
							<% if @medium.is_image_attached? %>
								<%= image_tag @medium.attachment.service_url, width: '100%', height: '100%' %>
							<% elsif @medium.is_video_attached? %>
								<%= videojs_rails sources: {mp4: @medium.attachment.service_url}, controlsList: 'nodownload' %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row mt-4">
			<div class="col-lg-10 offset-lg-1">
				<p><%= @medium.description %></p>
			</div>
		</div>
	</div>
</div>