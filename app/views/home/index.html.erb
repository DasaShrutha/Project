<div class="row">
	<div class="col">
		<div id="homeCarouselIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<% (0..@sliders.length - 1).each do |index| %>
					<li data-target="#homeCarouselIndicators"
					    data-slide-to="<%= index %>"
					    class="<%= 'active' if index.eql? 0 %>"></li>
				<% end %>
			</ol>

			<div class="carousel-inner">
				<% @sliders.each_with_index do |slider, index| %>
					<div class="carousel-item <%= 'active' if index.eql? 0 %>">
						<%= image_tag url_for(slider.preview), alt: slider.alt_text, class: 'd-block w-100' %>
					</div>
				<% end %>
			</div>

			<% if @sliders.length > 1 %>
				<a class="carousel-control-prev" href="#homeCarouselIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#homeCarouselIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			<% end %>
		</div>
	</div>
</div>

<div class="regular">
	<div class="row">
		<div class="col">
			<div class="regular_content">
				<div class="regular_title"><%= @about.title %></div>
				<div class="regular_text">
					<%= @about.description.html_safe %>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render partial: 'contacts/show' %>
